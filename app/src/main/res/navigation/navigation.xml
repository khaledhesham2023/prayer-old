<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/prayerTimeListFragment">

    <fragment
        android:id="@+id/prayerTimeListFragment"
        android:name="com.khaledamin.prayerapp.presentation.prayertimelist.PrayerTimeListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_prayer_time_list" >
        <action
            android:id="@+id/action_prayerTimeListFragment_to_qiblaDirectionFragment"
            app:destination="@id/qiblaDirectionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_prayerTimeListFragment_to_qiblaFragment"
            app:destination="@id/qiblaFragment" />
    </fragment>
    <fragment
        android:id="@+id/qiblaDirectionFragment"
        android:name="com.khaledamin.prayerapp.presentation.qibladirection.QiblaDirectionFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_qibla_direction">
        <argument
            android:name="latitude"
            app:argType="string" />
        <argument
            android:name="longitude"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/qiblaFragment"
        android:name="com.khaledamin.prayerapp.presentation.qibladirection.QiblaFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_qibla" >
        <argument
            android:name="latitude"
            app:argType="string" />
        <argument
            android:name="longitude"
            app:argType="string" />
    </fragment>
</navigation>